{
    "compilerOptions": {
        "skipLibCheck": true,
        "module": "ES2022",
        "moduleResolution": "nodenext",
        "target": "ES2022",
        "lib": [
            "ES2022"
        ],
        "typeRoots": [
            // add path to @types
            "node_modules/@types"
        ],
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "outDir": "./build",
        "removeComments": true,
        "allowSyntheticDefaultImports": true,
        "newLine": "lf",
        "esModuleInterop": true,
        "paths": {
            "commonlib": [
                "./node_modules/commonlib/build/typings.d.ts"
            ]
        }
    },
    "include": [
        "./src/",
    ],
    "exclude": [
        "./node_modules/"
    ],
}